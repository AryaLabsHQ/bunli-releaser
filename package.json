{
  "name": "bunli-releaser",
  "version": "0.0.0",
  "private": true,
  "description": "GoReleaser-like GitHub Action for Bunli CLIs: build multi-platform standalone binaries, publish GitHub Releases, and update Homebrew taps.",
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --target node24 --out-dir dist --clean",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "ci": "npm run typecheck && npm run test && npm run build"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/tool-cache": "^2.0.2",
    "js-yaml": "^4.1.0",
    "tar": "^7.4.3",
    "yazl": "^2.5.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=24"
  }
}

